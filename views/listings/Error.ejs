<%- layout('/layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="col-md-8 col-lg-6">
    <div class="alert alert-danger shadow-lg rounded-4 p-4 text-center" role="alert">
      <div class="mb-3">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem; color: #dc3545;"></i>
      </div>
      <h2 class="fw-bold mb-3">Oops!</h2>
      <p class="fs-5 mb-4"><%= message %></p>
      <a href="/listings" class="btn btn-primary btn-lg fw-semibold px-4 shadow-sm">
        <i class="bi bi-house-door-fill me-2"></i>Go Home
      </a>
    </div>
  </div>
</div>