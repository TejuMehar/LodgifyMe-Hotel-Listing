<% layout('/layouts/boilerplate') %>
<body class="bg-light">
  <div class="row justify-content-center my-5">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-sm rounded-4">
        <img src="<%= listing.image.url %>" class="card-img-top show-img rounded-top-4" alt="listing_image" style="object-fit:cover; height:320px;">
        <div class="card-body">
          <h3 class="card-title mb-3 text-danger fw-bold"><%= listing.title %></h3>
          <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item"><span class="fw-semibold">Description:</span> <%= listing.description %></li>
            <li class="list-group-item"><span class="fw-semibold">Price:</span> &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night</li>
            <li class="list-group-item"><span class="fw-semibold">Location:</span> <%= listing.location %></li>
            <li class="list-group-item"><span class="fw-semibold">Country:</span> <%= listing.country %></li>
          </ul>
          <div class="d-flex gap-3 justify-content-center">
            <form action="/listings/<%= listing._id %>/edit" method="GET" class="d-inline">
              <button type="submit" class="btn btn-warning fw-semibold px-4">Edit</button>
            </form>
            <form action="/listings/<%= listing._id %>/delete?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger fw-semibold px-4">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>