<% layout('/layouts/boilerplate') %>
<body>
    <h3>Listings in Detail</h3>
    <ul>
        <li><%= listing.title%></li>
         <li><%= listing.description %></li>
          <li>&#8377;<%= listing.price.toLocaleString("en-IN")%></li>
           <li><%= listing.location%></li>
            <li><%= listing.country %></li>
    <form action="http://localhost:3000/listings/<%= listing._id %>/edit" method="GET">
    <button type="submit">Edit</button>
</form>      
<form action="http://localhost:3000/listings/<%= listing._id %>/delete?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
</form>  
    </ul>
</body>
