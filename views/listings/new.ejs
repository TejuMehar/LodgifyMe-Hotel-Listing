<% layout('/layouts/boilerplate') %>
<body>
    <!-- Example: views/listings/new.ejs -->
     <h1>Create New Listings</h1>
<form action="/listings" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="listing[title]" required><br><br>
   <br>
  <label for="description">Description:</label>
  <textarea id="description" name="listing[description]" required></textarea><br><br>
    <br>
  <label for="image">Image URL:</label>
  <input type="url" id="image" name="listing[url]"><br><br>
   <br>
  <label for="price">Price:</label>
  <input type="number" id="price" name="listing[price]" required><br><br>
   <br>
  <label for="location">Location:</label>
  <input type="text" id="location" name="listing[location]" required><br><br>
   <br>
  <label for="country">Country:</label>
  <input type="text" id="country" name="listing[country]" required><br><br>
   <br>
  <button type="submit">Create Listing</button>
</form>
</body>
