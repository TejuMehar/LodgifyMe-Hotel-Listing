<% layout('/layouts/boilerplate') %>
<body>
    <!-- views/listings/edit.ejs -->
<h1>Edit Listing</h1>
<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" required><br><br>

  <label for="description">Description:</label>
  <textarea id="description" name="listing[description]" required><%= listing.description %></textarea><br><br>

  <label for="image">Image URL:</label>
  <input type="url" id="image" name="listing[image][url]" value="<%= listing.image.url %>"><br><br>

  <label for="price">Price:</label>
  <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" required><br><br>

  <label for="location">Location:</label>
  <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" required><br><br>

  <label for="country">Country:</label>
  <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" required><br><br>

  <button type="submit">Update Listing</button>
</form>
</body>
