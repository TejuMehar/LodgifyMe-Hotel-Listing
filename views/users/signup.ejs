<%- layout('/layouts/boilerplate') %>

<style>
  body {
    margin: 0;
    height: 100vh;
    width: 100vw;
    background: url('https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') 
                no-repeat center center/cover;
    background-attachment: fixed;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .auth-card {
    max-width: 550px;
    width: 90%;
    min-height: 500px;
    background: rgba(255, 205, 255, 0.15); /* glass effect */
    backdrop-filter: blur(12px);
    border-radius: 20px;
    padding: 40px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    color: #fff;
  }

  .auth-card h2 {
    color: #fff;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
  }

  .auth-card label {
    font-weight: 400;
    color: #fff;
  }

  .auth-card a {
    color: #ffd700;
    text-decoration: none;
    font-weight: 600;
  }

  .auth-card a:hover {
    text-decoration: underline;
  }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="card auth-card">
    <!-- Header -->
    <h2>Create Your Account</h2>

    <!-- Form -->
    <form action="/signup" method="POST" novalidate>
      <!-- Username -->
      <div class="mb-4">
        <label for="username" class="form-label">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          class="form-control form-control-lg" 
          placeholder="Choose a username"
          required>
      </div>

      <!-- Email -->
      <div class="mb-4">
        <label for="email" class="form-label">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="form-control form-control-lg" 
          placeholder="Enter your email"
          required>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="form-control form-control-lg" 
          placeholder="Create a password"
          required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-light w-100 fw-semibold py-2">Sign Up</button>

      <!-- Login Link -->
      <p class="text-center mt-4 mb-0">
        Already have an account? 
        <a href="/login">Login</a>
      </p>
    </form>
  </div>
</div>
